{
    "name": "Image Picker",
    "version": "1.0.0",
    "minimum_chrome_version": "38",
    "manifest_version": 2,
    "description": "Browse and download images on a web page.",
    "icons": {
        "48": "logo_avatar.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "downloads",
        "downloads.open",
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*",
        "<all_urls>",
        "background",
        "pageCapture"
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["lib/jquery-2.2.0.min.js", "js/hover.js"]
    }]
}